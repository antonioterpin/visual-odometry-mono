{
        "InputBlock": {
                "Handler": "Kitti",
                "Path": "data/kitti"
        },
        "InitBlock": {
                "Handler": "PatchMatching",
                "Params" : {
                        "RANSACIt": 2000,
                        "verbose": true,
                        "nIt": 2,
                        "nSkip": 1,
                        "adaptive": 0.99,
                        "nKeypoints": 1000,
                        "nCandidates": [[5,10,25,5,25,10,5], 
                            [5,10,25,5,25,10,5]],
                        "stopWithNPoints": 150,
                        "errorThreshold": 1,
                        "maxDistance": 400
                }
        },
        "COBlock": {
                "Handler": "KLT",
                "Params": {
                        "p3pRANSACIt": 2000,
                        "p3pTolerance": 2,
                        "adaptive": 0.99,
                        "minInliers": 5,
                        "verbose": true,
                        "nNewCandidates":50,
                        "r_T": 20,
                        "nIt": 50, 
                        "lambda": 0.1, 
                        "candidateSuppressionRadius": 10
                }
        },
        "OptBlock": {
                "Handler": "BA",
                "Params": {
                        "verbose": true,
                        "plotMap": 3,
                        "plotSparsityPattern": 0,
                        "isActive": true,
                        "maxBundleSize": 100,
                        "everyNIterations": 50,
                        "MaxIter": 20
                }
        },
        "OutputBlock": {
                "plotGroundTruth": false,
                "recentTrajectorySize": 20,
                "smooth": false,
                "color1": "g",
                "color2": "r"
        },
        "DetectorBlock": {
                "Handler": "Harris",
                "Params": {
                        "patchSize": 11,
                        "kappa": 0.08,
                        "nonMaximaSuppressionRadius": 5,
                        "descriptorRadius": 11,
                        "lambda": 3,
                        "plotKeypoints": 0,
                        "plotMask": 0
                }
        },
        "Pipeline": {
            "verbose": true,
            "nSkip": 1,
            "startingFrame": 1,
            "lastFrame": 120,
            "State": {
                "lostBelow": 15,
                "verbose": true,
                "cosTh": 2
            },
            "continuouslyTriangulate": true
        }
}