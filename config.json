{
        "InputBlock": {
                "Handler": "Kitti",
                "Path": "data/kitti"
        },
        "InitBlock": {
                "Handler": "PatchMatching",
                "Params" : {
                        "RANSACIt": 2000,
                        "verbose": true,
                        "nIt": 2,
                        "nSkip": 1,
                        "adaptive": 0.99,
                        "stopWithNPoints": 90,
                        "errorThreshold": 1,
                        "maxDistance": 300
                }
        },
        "COBlock": {
                "Handler": "P3PRANSAC",
                "Params": {
                        "p3pRANSACIt": 2000,
                        "p3pTolerance": 1,
                        "adaptive": 0.99,
                        "minInliers": 5,
                        "verbose": true
                }
        },
        "OptBlock": {
                "Handler": "BA",
                "Params": {
                        "verbose": true,
                        "plotMap": 3,
                        "plotSparsityPattern": 0,
                        "isActive": true,
                        "maxBundleSize": 100,
                        "everyNIterations": 50,
                        "MaxIter": 20
                }
        },
        "OutputBlock": {
                "plotGroundTruth": true,
                "recentTrajectorySize": 5,
                "smooth": false,
                "color1": "g",
                "color2": "y"
        },
        "DetectorBlock": {
                "Handler": "Harris",
                "Params": {
                        "patchSize": 11,
                        "kappa": 0.08,
                        "nKeypoints": [[2000]],
                        "nonMaximaSuppressionRadius": 9,
                        "descriptorRadius": 11,
                        "lambda": 3,
                        "plotKeypoints": 0,
                        "plotMask": 0
                }
        },
        "Pipeline": {
            "verbose": true,
            "nSkip": 1,
            "startingFrame": 1,
            "lastFrame": 120,
            "State": {
                "lostBelow": 20,
                "verbose": true,
                "candidatesWindowSize": 2,
                "cosineThreshold": 0.9
            },
            "continuouslyTriangulate": false
        }
}